{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "start:tsc",
      "label": "Run typescript compiler in watch mode",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": "generate",
      "problemMatcher": "$tsc-watch"
    },
    {
      "label": "generate",
      "type": "npm",
      "script": "generate",
      "isBackground": true,
      "group": "build",
      "path": "packages/report-schema",
    }
  ]
}

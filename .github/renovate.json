{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", "config:js-lib", "group:linters", "group:test"],
  "timezone": "Europe/Amsterdam",
  "schedule": ["every weekend"],
  "configMigration": true,
  "minimumReleaseAge": "2 days",
  "prCreation": "not-pending",
  "lockFileMaintenance": {
    "enabled": true
  },
  "github-actions": {
    "extends": [":preserveSemverRanges"]
  },
  "packageRules": [
    {
      "matchDepTypes": ["devDependencies"],
      "automerge": true
    },
    {
      "matchUpdateTypes": ["patch", "pin", "digest", "lockFileMaintenance"],
      "automerge": true
    },
    {
      "groupName": "Types",
      "matchPackageNames": ["@types/{/,}**"]
    },
    {
      "groupName": "linters",
      "matchPackageNames": ["/eslint/", "/prettier/"]
    },
    {
      "groupName": "Tailwind packages",
      "matchPackageNames": ["/tailwindcss/"]
    },
    {
      "groupName": "TSConfig base packages",
      "matchPackageNames": ["@tsconfig{/,}**"]
    }
  ],
  "automergeStrategy": "squash",
  "platformAutomerge": true,
  "ignorePaths": ["**/*.sbt"]
}

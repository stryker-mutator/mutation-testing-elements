{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "packages": ["packages/*"],
  "version": "3.0.1",
  "command": {
    "version": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "createRelease": "github",
      "exact": true
    },
    "publish": {
      "preDistTag": "beta",
      "concurrency": 1
    }
  }
}

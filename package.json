{
  "name": "root",
  "private": true,
  "version": "0.0.6",
  "description": "A suite of web components for a mutation testing report.",
  "main": "dist/mutation-test-elements.js",
  "scripts": {
    "clean": "rimraf packages/*/{dist,dist-test}",
    "all": "npm run lint && npm run build && npm run test",
    "postinstall": "lerna bootstrap && link-parent-bin",
    "lint": "tslint -p tsconfig.lint.json",
    "prebuild": "npm run clean",
    "build": "tsc -b && lerna run build",
    "test": "lerna run test --stream",
    "start": "webpack-dev-server --open",
    "start:tsc": "tsc --build --watch",
    "lerna:version:patch": "lerna version --conventional-commits patch",
    "lerna:version:minor": "lerna version --conventional-commits minor",
    "lerna:version:major": "lerna version --conventional-commits major",
    "lerna:publish": "lerna publish from-git --yes",
    "prepublishOnly": "echo $PGP_SECRET | base64 --decode | gpg --import"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stryker-mutator/mutation-testing-elements.git"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/stryker-mutator/mutation-testing-elements/issues"
  },
  "homepage": "https://github.com/stryker-mutator/mutation-testing-elements#readme",
  "devDependencies": {
    "@stryker-mutator/core": "^2.0.1",
    "@stryker-mutator/html-reporter": "^2.0.1",
    "@stryker-mutator/karma-runner": "^2.0.1",
    "@stryker-mutator/mocha-framework": "^2.0.1",
    "@stryker-mutator/typescript": "^2.0.1",
    "@types/chai": "^4.1.7",
    "@types/express": "^4.17.0",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.0.12",
    "@types/selenium-webdriver": "^4.0.2",
    "@types/sinon": "^7.0.13",
    "@types/sinon-chai": "^3.2.2",
    "@types/webpack-env": "^1.13.9",
    "ajv": "^6.10.0",
    "bootstrap": "^4.3.1",
    "chai": "^4.2.0",
    "chromedriver": "^76.0.0",
    "cross-env": "^5.2.0",
    "css-loader": "^3.0.0",
    "express": "^4.17.1",
    "highlight.js": "^9.15.8",
    "karma": "^4.1.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-mocha": "^1.3.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^4.0.2",
    "lerna": "^3.15.0",
    "link-parent-bin": "^1.0.1",
    "lit-element": "^2.2.0",
    "mocha": "^6.1.4",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.2",
    "sass": "^1.22.3",
    "sass-loader": "^7.1.0",
    "selenium-webdriver": "^4.0.0-alpha.4",
    "sinon": "^7.3.2",
    "sinon-chai": "^3.3.0",
    "source-map-support": "^0.5.12",
    "terser-webpack-plugin": "^1.3.0",
    "ts-loader": "^6.0.4",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "typescript": "^3.5.2",
    "webpack": "^4.35.2",
    "webpack-cli": "^3.3.5",
    "webpack-dev-server": "^3.7.2",
    "webpack-merge": "^4.2.1"
  },
  "dependencies": {}
}

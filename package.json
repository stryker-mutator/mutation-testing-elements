{
  "name": "root",
  "private": true,
  "version": "0.0.6",
  "description": "A suite of web components for a mutation testing report.",
  "main": "dist/mutation-test-elements.js",
  "workspaces": [
    "packages/*"
  ],
  "nx": {
    "_comment": "This creates a new 'root' project, with dependencies on subprojects, so 'test' in elements will call root:build:tsc",
    "implicitDependencies": [
      "mutation-testing-report-schema",
      "mutation-testing-elements",
      "mutation-testing-metrics"
    ]
  },
  "scripts": {
    "clean": "rimraf --glob packages/*/{dist,dist-test,src-generated}",
    "all": "nx affected --target=lint:prettier,lint:ts,build,test",
    "lint": "npm run lint:prettier && npm run lint:ts",
    "lint:ts": "eslint --ext .js,.ts .",
    "lint:prettier": "prettier --check .",
    "build:tsc": "tsc --build",
    "start": "nx run-many --target=start --no-prefix",
    "start:tsc": "tsc --build --watch",
    "download-incremental-reports": "bash tasks/download-incremental-reports.sh",
    "lerna:version:patch": "lerna version patch",
    "lerna:version:minor": "lerna version minor",
    "lerna:version:major": "lerna version major",
    "lerna:publish": "lerna publish from-git --yes --no-verify-access"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/stryker-mutator/mutation-testing-elements.git"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/stryker-mutator/mutation-testing-elements/issues"
  },
  "homepage": "https://github.com/stryker-mutator/mutation-testing-elements#readme",
  "devDependencies": {
    "@stryker-mutator/core": "^7.1.0",
    "@stryker-mutator/karma-runner": "^7.1.0",
    "@stryker-mutator/mocha-runner": "^7.1.0",
    "@stryker-mutator/typescript-checker": "^7.1.0",
    "@types/chai": "^4.1.7",
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.1.0",
    "@types/sinon": "^10.0.0",
    "@types/sinon-chai": "^3.2.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "chai": "^4.2.0",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "~8.9.0",
    "eslint-plugin-import": "~2.28.0",
    "json-schema-to-typescript": "^13.0.1",
    "lerna": "^7.1.0",
    "mocha": "^10.0.0",
    "prettier": "~3.0.0",
    "prettier-plugin-tailwindcss": "^0.4.0",
    "rimraf": "^5.0.0",
    "sinon": "^15.0.0",
    "sinon-chai": "^3.3.0",
    "source-map-support": "^0.5.12",
    "typescript": "^5.0.2"
  }
}

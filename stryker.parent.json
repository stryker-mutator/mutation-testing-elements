{
  "$schema": "./packages/elements/node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "packageManager": "pnpm",
  "reporters": ["html", "clear-text", "progress", "dashboard"],
  "testRunner": "mocha",
  "buildCommand": "tsc -b",
  "coverageAnalysis": "perTest",
  "checkers": ["typescript"],
  "mochaOptions": {
    "spec": ["dist/test/unit/**/*.js"]
  },
  "concurrency": 2,
  "plugins": ["@stryker-mutator/*", "@stryker-mutator/mocha-runner", "@stryker-mutator/typescript-checker"]
}
